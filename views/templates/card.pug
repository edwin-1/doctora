div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${consulta.imagen}` alt=`imagen consulta ${consulta.titulo}`)
    div(class="p-5 space-y-3")
        h3(class="text-2xl font-bold")= consulta.titulo
        p(class="text-sm text-gray-600")  
            span(class="text-gray-800 font-bold")= consulta.descripcion
        a(href=`/consulta/${consulta.id}` class="bg-slate-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Informacion